@model List<JiraApp.Models.Tasks.TaskItem>

<div id="taskListContainer">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5>To Do</h5>
                </div>
                <div class="card-body">
                    <div class="task-list" id="todo-tasks">
                        @foreach (var task in Model.Where(t => t.Status == JiraApp.Models.Tasks.TaskStatusEnum.ToDo))
                        {
                            <div class="card mb-2 task-card" data-task-id="@task.Id">
                                <div class="card-body">
                                    <h6 class="card-title">@task.Title</h6>
                                    <p class="card-text small">@(task.Description?.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description)</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-info">@task.WorkType</span>
                                        <small>Assigned to: @(task.Assignee?.Username ?? "Unassigned")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>In Progress</h5>
                </div>
                <div class="card-body">
                    <div class="task-list" id="inprogress-tasks">
                        @foreach (var task in Model.Where(t => t.Status == JiraApp.Models.Tasks.TaskStatusEnum.InProgress))
                        {
                            <div class="card mb-2 task-card" data-task-id="@task.Id">
                                <div class="card-body">
                                    <h6 class="card-title">@task.Title</h6>
                                    <p class="card-text small">@(task.Description?.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description)</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-info">@task.WorkType</span>
                                        <small>Assigned to: @(task.Assignee?.Username ?? "Unassigned")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Done</h5>
                </div>
                <div class="card-body">
                    <div class="task-list" id="done-tasks">
                        @foreach (var task in Model.Where(t => t.Status == JiraApp.Models.Tasks.TaskStatusEnum.Done))
                        {
                            <div class="card mb-2 task-card" data-task-id="@task.Id">
                                <div class="card-body">
                                    <h6 class="card-title">@task.Title</h6>
                                    <p class="card-text small">@(task.Description?.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description)</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-info">@task.WorkType</span>
                                        <small>Assigned to: @(task.Assignee?.Username ?? "Unassigned")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
